{$R *.dfm}

procedure TfrmPrincipal.btnAPIClick(Sender: TObject);
begin
  var
    nomeArquivo,base64,path: string;
   var encoder: TIdEncoderMIME;

  nomeArquivo := '51180310841001000112550010000001591000001594-nfe.pdf';
  path:= 'C:\Sistemas\SAGA_Monitor\PDF\' + nomeArquivo;
  if FileExists(path) then
  begin
  encoder := TIdEncoderMIME.Create(nil);
    base64 := encoder.EncodeString(path);
    memoBase64.Text:=base64;
  end;

end;

